@model ChessProject.Models.ContactInfo
@{
    ViewBag.Name = "Create a contact";
}

<h2>@ViewBag.Name</h2>
<br />

@using (Html.BeginForm(actionName: "New", controllerName: "ContactInfo", method: FormMethod.Post))
{
    @Html.LabelFor(c => c.PhoneNumber, "Phone number:")
    <br />
    @Html.TextBoxFor(c => c.PhoneNumber, null, new { placeholder = "Type in the phone number", @class = "form-control" })
    @Html.ValidationMessageFor(c => c.PhoneNumber, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.LabelFor(c => c.Email, "Email:")
    <br />
    @Html.TextBoxFor(c => c.Email, null, new { placeholder = "Email", @class = "form-control", @style = "margin-bottom:3px" })
    @Html.ValidationMessageFor(c => c.Email, "", new { @class = "text-danger" })

    <br />
    <br />

    <button class="btn btn-primary" type="submit">Create</button>
}