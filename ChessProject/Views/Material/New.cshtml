@model ChessProject.Models.Material
@{
    ViewBag.Name = "Create a material";
}

<h2>@ViewBag.Name</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Material", method: FormMethod.Post))
{
    @Html.LabelFor(bt => bt.Name, "Name:")
    <br />
    @Html.TextBoxFor(bt => bt.Name, null, new { placeholder = "Type in the material's name", @class = "form-control" })
    @Html.ValidationMessageFor(bt => bt.Name, "", new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-primary" type="submit">Create</button>
}