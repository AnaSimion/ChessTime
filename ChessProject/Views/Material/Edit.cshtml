@model ChessProject.Models.Material
@{
    ViewBag.Name = "Update Material";
}

<h2>@ViewBag.Name</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Material", method: FormMethod.Post))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(b => b.MaterialId)
  

    @Html.LabelFor(bt => bt.Name, "Name:")
    <br />
    @Html.EditorFor(bt => bt.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(bt => bt.Name, "", new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-primary" type="submit">Update</button>
}